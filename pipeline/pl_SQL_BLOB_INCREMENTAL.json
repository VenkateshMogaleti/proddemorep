							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"sqlReaderQuery": {
										"value": "@concat('select * from ',item().schemaname,'.',item().tablename, ' where ', item().incrementalcolumn, ' Between ', '''item().Lastextracteddate''', ' AND ', '''formatDateTime(utcnow(),yyyy-MM-dd hh:mm:ss)''')",
