				"dependsOn": [
					{
						"activity": "Get the tables",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Get the tables').output.value",
